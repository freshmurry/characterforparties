<div class="row">
  <div class="col-md-3">
    <div class="center">
      <%= image_tag (@user.image), class: "avatar-full" %>
      <% if current_user && current_user != @user %>
        <% link_to "Send Message", conversation_path(sender_id: current_user.id, recipient_id: @user.id), method: :post, class: "btn btn-default" %>
      <% end %>
    </div>
    <br/>
    <div class="panel panel-default">
      <div class="panel-heading">Verification</div>
      <div class="panel-body">
        <ul class="sidebar-list">
          <% if @user.confirmation_token %>
            <li>Email Address<span class="pull-right icon-babu"><i class="fa fa-check-circle-o"></i></span></li>
          <% end %>
          <% if @user.provider %>
            <li>Facebook<span class="pull-right icon-babu"><i class="fa fa-check-circle-o"></i></span></li>
          <% end %>
          <% if current_user.phone_verified %>
            <li>Phone Number<span class="pull-right icon-babu"><i class="fa fa-check-circle-o"></i></span></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="col-md-9">
    <h2 class="text-green"><%= @user.fullname %></h2>

    <div class="description row-space-3">
      <%= @user.description %>
    </div>
    
    <!-- YOUR LISTNGS -->
    <div class="panel panel-default">
      <div class="panel-heading">Your Listings (<%= @venues.length %>)</div>
      <div class="panel-body">
        <%= render partial: "venues/venues_list", locals: {venues: @venues} %>
      </div>
    </div>
    
    <!-- YOUR REVIEWS -->
    <div class="row">
      <%= render partial: "reviews/guest_list" %>
    </div>
    <br/>
    
    <div class="panel panel-default">
      <div class="panel-heading">Reviews from Host (<%= @host_reviews.count %>)</div>
      <div class="panel-body">
        <%= render "reviews/host_list" %>
      </div>
    </div>

  </div>
</div>