<% pools.each do |pool| %>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading preview">
        <div class="price-box-wrapper">
          <span>$<%= pool.price %> /day</span>
        </div>
        <%= link_to image_tag(pool.cover_photo(:medium)) %>        
        <div class="box-wrapper">
          <span><%= pool.pool_type %> &nbsp; <div class="fa fa-users"></div> <%= pool.accommodate %></span>
        </div>
      </div>
      <div class="panel-body">
        <div class="container">
          <span class="col-md-12" style="padding-left: 0px; padding-right: 0px;"><%= link_to pool.listing_name, pool %></span></br>
          <span class="col-md-12" style="padding-left: 0px; padding-right: 0px;"><%= pluralize(pool.guest_reviews.count, "review") %></span>
          <div id="star_<%= pool.id %>"></div>
        </div>
      </div>
    </div>
  </div>
  
  <script>
    $('#star_<%= pool.id %>').raty({
      path: '/assets',
      readOnly: true,
      score: <%= pool.average_rating %>
    });
  </script>
<% end %>