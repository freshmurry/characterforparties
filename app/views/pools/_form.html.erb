<div class="row">
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				List Your Pool
      </div>

      <div class="panel-body">
        <div class="container">
      
          <%= form_for @pool, html: { multipart: true } do |f| %>

        <div class="col-md-4 select">
          <div class="form-group">
            <label>Accommodate</label>
            <%= f.select :accommodate, [["1", 1], ["2", 2], ["3", 3], ["4", 4]], 
               id: "accommodate", prompt: "Select...", class: "form-control" %>
          </div>
        </div>
          
        <div class="col-md-4 select">
          <div class="form-group">
            <label>Pool Type</label>
            <%= f.select :pool_type, [["Above Ground", "Above Ground"], ["In-Ground","In-Ground"]],
              id: "pool_type", prompt: "Select...", class: "form-control" %>
          </div>
        </div>
          
        <div class="col-md-4 select">
          <div class="form-group">
            <label>Rest Rooms</label>
            <%= f.select :restrooms, [["1", 1], ["2", 2], ["None", None]], id: "restrooms", prompt: "Select...", class: "form-control" %>
          </div>
        </div>
          
        <div class="col-md-4 select">
          <div class="form-group">
            <label>Booking Type</label>
            <%= f.select :instant, Pool.instants.map {|key,value| [key.humanize, key]}, selected: 'Instant', prompt: "Select...", class: "form-control" %>
          </div>
        </div>
        
        <div class="col-md-12">
          <div class="form-group">
            <label>Listing Title</label>
            <%= f.text_field :listing_name, placeholder: "Write a great title?", class: "form-control", required: true %>
          </div>
        </div>

        <div class="col-md-12">
          <div class="form-group">
            <label>Description</label>
            <%= f.text_area :description, rows: 5, placeholder: "Description of your pool", class: "form-control", required: true %>
          </div>
        </div>  

        <div class="col-md-12">
          <div class="form-group">
            <label>Address</label>
            <%= f.text_field :address, placeholder: "Address", class: "form-control", required: true, id: "autoaddress" %>
          </div>
        </div>
        
        <hr></hr>
        
        <div class="col-md-4">
          <div class="form-group">
            <label>Price</label>
            <div class="input-group">
              <span class="input-group-addon">$</span>
              <%= f.text_field :price, placeholder: "eg. 50", class: "form-control" %>
            </div>  
          </div>
        </div>        
      </div>  
    </div>
  </div>
<!------------------------------ PHOTO UPLOAD PANEL ------------------------------>
  <div class="panel panel-default">
      <div class="panel-heading">Add Photos</div>
      
      <div class="container">  
        <div class="panel-body">
          <div class="container">
            <div class="row">
              <div class="col-md-offset-3 col-md-6">
                  
                <!-- PHOTOS UPLOAD GOES HERE -->
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Upload Photos</label>
                    <span class="btn btn-default btn-file">
                      <i class="fas fa-cloud-upload-alt" aria-hidden="true"></i> Select Photos
                      <%= file_field_tag "images[]", type: :file, multiple: true %>
                    </span>
                  </div>
                </div>

                <div id="photos"><%= render 'photos/photos_list' %></div>

                  <%= f.hidden_field :active, value: true %>
                  <%= f.submit "Publish", id: "publish_button", class: "btn btn-normal btn-block" %>
    
                <% end %>
              </div>
            </div>
                        
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="panel-default">
      <div class="container">
        <a href="https://track.fiverr.com/visit/?bta=7074&nci=5479&campaign=19735" Target="_Top"><img border="0" src="https://fiverr.ck-cdn.com/tn/serve/?cid=1492998"></a>
        <br><br/>
      </div>
    </div> 
  </div>
</div>

