<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Current Listings", characters_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Current Bookings", current_reservations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Previous Bookings", previous_reservations_path, class: "sidebar-link active" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Previous Reservations
      </div>
      <div class="panel-body">
        <div class="container">
          <% if @previous_reservations.present? %>
            <% @previous_reservations.each do |reservation| %>
              <div class="row">
                <div class="container">
                  <div class="col-md-3">
                    <span>
                      Reserved by:
                      <%= link_to user_path(reservation.user) do %>
                        <%= image_tag reservation.user.image, class: "img-circle avatar-small" %>
                        <div><%= reservation.user.fullname %></div>
                      <% end %>
                    </span></br>
                    <%= render partial: "reviews/host_form", locals: { reservation: reservation } if reservation.Approved? %>
                  </div>&nbsp;

                  <div class="col-md-2">
                    <%= reservation.start_date.strftime('%D') %>
                    <p><%= reservation.status %></p>
                  </div>

                  <div class="col-md-4">
                    <%= link_to character_path(reservation.character) do %>
                      <%= image_tag reservation.character.cover_photo(:medium) %>
                      <%= link_to reservation.character.listing_name, character_path(reservation.character) %>
                    <% end %>
                  </div>
                </div>
              </div>
              <hr/>
            <% end %>
          <% else %>
            <div class="col-md-12 text-center">
              <h3>You don't have any previous bookings</h3><br/>
              <%= link_to "Search for a Character", search_path, class: "btn btn-normal" %>
            </div>
          <% end %>
        </div>  
      </div>
    </div>
  </div>
</div>
