<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Listings", venues_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Events", your_events_path, class: "sidebar-link active" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Your Events
      </div>
      <div class="panel-body">

        <% @events.each do |event| %>
          <div class="row">
            <div class="col-md-2">
              <%= event.start_date.strftime('%v') %>
              <p><%= event.status %></p>
            </div>
            <div class="col-md-2">
              <%= link_to venue_path(event.venue) do %>
                <%= image_tag event.venue.cover_photo(:thumb) %>
              <% end %>
            </div>
            <div class="col-md-5">
              <%= link_to event.venue.listing_name, venue_path(event.venue) %><br/><br/>
              <span>
                <%= image_tag avatar_url(event.venue.user), class: "img-circle avatar-small" %>
                <%= link_to user_path(event.venue.user) do %>
                    <%= event.venue.user.fullname %>
                <% end %>
              </span>
            </div>
            <div class="col-md-3 text-right">
              <%= render partial: "reviews/guest_form", locals: {reservation: event} if event.Approve? %>
            </div>
          </div>
          <hr/>
        <% end %>
      </div>
    </div>
  </div>
</div>