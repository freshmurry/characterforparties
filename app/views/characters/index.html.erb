<section class="">
  <div class="">
    <div class="row">
      <!-- Sidebar -->
      <div class="col-md-3">
        <ul class="sidebar-list">
          <li class="sidebar-item"><%= link_to "Current Listings", characters_path, class: "sidebar-link active" %></li>
          <li class="sidebar-item"><%= link_to "Current Bookings", current_reservations_path, class: "sidebar-link" %></li>
          <li class="sidebar-item"><%= link_to "Previous Bookings", previous_reservations_path, class: "sidebar-link" %></li>
        </ul>
      </div>
      <!-- Main Content -->
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading">
            Listings
          </div>
          <div class="panel-body">
            <div class="container">
              <% if @characters.present? %>
                <% @characters.each do |character| %>
                  <div class="mb-3">


                    <!-- COVER PHOTO -->
                    <div class="col-md-2">
                      <% if character.photos.any? %>
                        <%= image_tag character.photos.first.image.url(:thumb) %>
                      <% end %>                   
                    </div>
                    
                    <!-- Listing Name -->
                    <div class="col-md-6">
                      <h5><%= character.listing_name %></h5>
                    </div>
                    
                    <!-- ACTION BUTTONS -->
                    <div class="col-md-4">
                      <%= link_to "Update", edit_character_path(character), class: "btn btn-form" %>
                      <%= link_to character, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger ml-2" do %>
                        Delete
                      <% end %>  
                    </div>
                  </div>
                  <hr/>
                <% end %>
              <% else %>
                <div class="text-center">
                  <h4>You do not have any current listings.</h4>
                  <%= link_to "List a Character", new_character_path, class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
