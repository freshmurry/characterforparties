<head>
  <title><%= @character.listing_name %></title>
  <meta property="og:title" content="<%= @character.listing_name %>" />
  <meta property="og:description" content="Book this amazing character for <%= number_to_currency(@character.price/ 100.0) %>!" />
  <meta property="og:image" content="<%= @character.photos %>" />
  <meta property="og:url" content="<%= character_url(@character) %>" />
</head>

<script>
  function copyLink() {
    var copyText = document.getElementById("share-link");
    copyText.select();
    copyText.setSelectionRange(0, 99999); // For mobile devices
    document.execCommand("copy");
    alert("Copied the link: " + copyText.value);
  }
</script>

<script>
  $('#average_rating').raty({
    path: '/assets',
    readOnly: true,
    score: <%= @character.average_rating %>
  });
</script>

<div class="row">
  <div class="col-md-12">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <% if @photos.present? %>
        <ol class="carousel-indicators">
          <% @photos.each_with_index do |photo, index| %>
            <li data-target="#myCarousel" data-slide-to="<%= index %>" class="<%= 'active' if index == 0 %>"></li>
          <% end %>
        </ol>
      <% end %>
      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <% if @photos.present? %>
          <% @photos.each_with_index do |photo, index| %>
            <div class="item <%= 'active' if index == 0 %>">
              <%= image_tag photo.image.url %>
            </div>
          <% end %>
        <% end %>
      </div>
  
      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>

