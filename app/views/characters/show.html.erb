        <script>
         function initialize() {
            // var location = { lat: 41.881832, lng: -87.623177 }; // Default location
            var location = <%= @character.latitude.present? && @character.longitude.present? ? "{lat: #{@character.latitude.to_f}, lng: #{@character.longitude.to_f}}" : "{lat: 41.881832, lng: -87.623177}" %>;
