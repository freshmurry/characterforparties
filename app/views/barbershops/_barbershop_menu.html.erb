<ul class="sidebar-list">
  <li class="sidebar-item">
    <%= link_to "Listing", listing_barbershop_path, class: "sidebar-link active" %>
    <span class="pull-right text-babu"><i class="fa fa-check-circle"></i></span>
  </li>
  <li class="sidebar-item">
    <%= link_to "Services", service_barbershop_path, class: "sidebar-link active" %>
    <span class="pull-right text-babu"><i class="fa fa-check-circle"></i></span>
  </li>
  <li class="sidebar-item">
    <%= link_to "Pricing", pricing_barbershop_path, class: "sidebar-link active" %>
    <% if !@barbershop.price.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check-circle"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Description", description_barbershop_path, class: "sidebar-link active" %>
    <% if !@barbershop.listing_name.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check-circle"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Photos", photo_upload_barbershop_path, class: "sidebar-link active" %>
    <% if !@barbershop.photos.blank? %>
      <span id="photo_check" class="pull-right text-babu"><i class="fa fa-check-circle"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Payment Type", extras_barbershop_path, class: "sidebar-link active" %>
    <span class="pull-right text-babu"><i class="fa fa-check-circle"></i></span>
  </li>
  <li class="sidebar-item">
    <%= link_to "Location Address", location_barbershop_path, class: "sidebar-link active" %>
    <% if !@barbershop.address.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check-circle"></i></span>
    <% end %>
  </li>
</ul>
<hr/>

<% is_ready = !@barbershop.active && !@barbershop.price.blank? && !@barbershop.listing_name.blank? && !@barbershop.photos.blank? && !@barbershop.address.blank? %>

<%= form_for @barbershop do |f| %>
  <%= f.hidden_field :active, value: true %>
  <%= f.submit "Publish", id: "publish_button", class: "btn btn-normal btn-block", disabled: !is_ready %>
<% end %>