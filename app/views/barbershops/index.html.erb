<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Listings", barbershops_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "Your Reservations", your_reservations_path, class: "sidebar-link" %></li>
      <li class="sidebar-item"><%= link_to "Your Appointments", your_appointments_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Listings
      </div>
      <div class="panel-body">
        <% @barbershops.each do |barbershop| %>
            <div class="row">
            <div class="col-md-2">
              <%= image_tag barbershop.cover_photo(:thumb) %>
            </div>
            <div class="col-md-7">
              <h4><%= barbershop.listing_name %></h4>
            </div>
            <div class="col-md-3 right">
              <%= link_to "Update", listing_barbershop_path(barbershop), class: "btn btn-form" %>
            </div>
          </div>
          <hr/>
        <% end %>
      </div>
    </div>
  </div>
</div>