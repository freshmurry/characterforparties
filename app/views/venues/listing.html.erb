<div class="row">
  <div class="col-md-3">
    <%= render 'venue_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Listing
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @venue do |f| %>

            <div class="row">

              <div class="col-md-4 select">
              <div class="form-group">
                <label>Location Type</label>
                <%= f.select :location_type, [["Church", "Church"], ["Park District", "Park District"], ["Town Hall", "Town Hall"],
                ["Parking Lot", "Parking Lot"], ["Back Yard", "Back Yard"], ["Vine Yard", "Vine Yard"], ["Golf Course", "Gold Course"], 
                ["Warehouse", "Warehouse"], ["Art Gallery", "Art Gallery"], ["Boutique/Clothing Store", "Boutique/Clothing Store"]], 
                id: "location_type", prompt: "Select...", class: "form-control" %>
              </div>
            </div>
            
            <div class="col-md-4 select">
               <div class="form-group">
                <label>Rest Rooms</label>
                <%= f.select :rest_room, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]], id: "rest_room", prompt: "Select...", class: "form-control" %>
              </div>
            </div>
              
            <div class="col-md-4 select">
              <div class="form-group">
                <label>Event Type</label>
                <%= f.select :event_type, [["Public Event Space", "Public Event Space"], ["Private Event Space", "Private Event Space"]], 
                id: "event_type", prompt: "Select...", class: "form-control" %>
              </div>
            </div>
            
            <div class="col-md-4 select">
              <div class="form-group">
                <label>Booking Type</label>
                <%= f.select :instant, Venue.instants.map {|key,value| [key.humanize, key]}, selected: 'Instant', prompt: "Select...", class: "form-control" %>
              </div>
            </div>
            
            <div class="col-md-4 select">
              <div class="form-group">
                <label>Accommodate</label>
                <%= f.select :accommodate, ["10-50", 10-50], ["50-100", 50-100], ["100-150", 100-150], ["100-150", 100-150], ["150-200", 150-200], ["200+", 200]],
                id: "accommodate", prompt: "Select...", class: "form-control" %>
              </div>
            </div>
          </div>
  
          <div><%= f.submit "Save", class: "btn btn-normal" %></div>

          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>