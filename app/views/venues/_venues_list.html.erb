<% venues.each do |venue| %>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading preview">
        <div class="price-box-wrapper">
          <span>$<%= venue.price %> /day</span>
        </div>
        <%= link_to image_tag(venue.cover_photo(:medium)), venue %>
        <div class="box-wrapper">
          <span><%= venue.venue_type %> &nbsp; <div class="fa fa-users"></div> <%= venue.accommodate %></span>
        </div>
      </div>
      <div class="panel-body">
        <div class="container">
          <span class="col-md-12" style="font-weight: 500;"><%= link_to venue.listing_name, venue %></span></br>
          <span class="col-md-12"><%= pluralize(venue.guest_reviews.count, "review") %></span>
          <div id="star_<%= venue.id %>"></div>
        </div>
      </div>
    </div>
  </div>
  
  <script>
    $('#star_<%= venue.id %>').raty({
      path: '/assets',
      readOnly: true,
      score: <%= venue.average_rating %>
    });
  </script>
<% end %>