<!-- Image -->
<div class="row">
  <div class="col-md-12">
    <%= image_tag @venue.cover_photo(nil), width: "100%" %>
  </div>
</div>
<br/>

<div class="row">

  <!-- LEFT PANEL -->
  <div class="col-md-8">

    <!-- Listing Name -->
    <div class="row">
      <div class="col-md-8">
        <h1><%= @venue.listing_name %></h1>
        <%= @venue.address %>
      </div>
      <div class="col-md-4 text-center">
        <%= image_tag avatar_url(@venue.user), class: "img-circle avatar-large" %><br/><br/>
        <%= @venue.user.fullname %>
      </div>
    </div>
    <hr/>

    <!-- Barber Info -->
    <div class="row text-babu">
      <div class="row text-center row-space-1">
        <div class="col-md-3">
          <i class="fa fa-home fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-user-circle-o fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-scissors fa-2x"></i>
        </div>
        <div class="col-md-3">
          <i class="fa fa-credit-card fa-2x"></i>
        </div>
      </div>

      <div class="row text-center">
        <div class="col-md-3"><%= @venue.event_type %></div>
        <div class="col-md-3"><%= @venue.location_type %></div>
        <div class="col-md-3"><%= @venue.rest_room %></div>
        <div class="col-md-3"><%= @venue.accommodate %></div>
      </div>
    </div>
    <hr/>

    <!-- About -->
    
    
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">About This Listing</div>
          <div class="panel-body">
            <p><%= @venue.summary %></p>
        </div>
      </div>
    </div>
    <br/>

    <!-- AMINITIES --> 
    <div class="row">
      <div class="col-md-3">
        <h4>Aminities</h4>
      </div>

      <div class="col-md-9">
        <div class="row">
          <div class="col-md-6">
            <ul class=" ">
              <li class="< 'text-line-through' if !@venue.is_kitchen %>">Kitchen</li>
              <li class="< 'text-line-through' if !@venue.is_tables %>">Tables</li>
              <li class="< 'text-line-through' if !@venue.is_chairs %>">Chairs</li>
            </ul>
          </div>
          <div class="col-md-6">
            <ul class=" ">
              <li class="< 'text-line-through' if !@venue.is_microphone %>">Microphone</li>
              <li class="< 'text-line-through' if !@venue.is_projector %>">Projector</li>
              <li class="< 'text-line-through' if !@venue.is_bar %>">Bar</li>
            </ul>
          </div>
          <div class="col-md-6">
            <ul class=" ">
              <li class="< 'text-line-through' if !@venue.is_self_parking %>">Self-Parking</li>
              <li class="< 'text-line-through' if !@venue.is_valet_parking %>">Valet Parking</li>
              <li class="< 'text-line-through' if !@venue.is_garage_parking %>">Garage Parking</li>
            </ul>
          </div>
          <div class="col-md-6">
            <ul class=" ">
              <li class="< 'text-line-through' if !@venue.is_air %>">Air Conditioning</li>
              <li class="< 'text-line-through' if !@venue.is_heating %>">Heating</li>
              <li class="< 'text-line-through' if !@venue.is_wifi %>">Wifi</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <hr/>

    <!-- CAROUSEL -->
    <div class="row">
      
      <% if @photos.length > 0 %>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <% @photos.each do |photo| %>
            <li data-target="#myCarousel" data-slide-to="<%= photo.id %>"></li>
          <% end %>
        </ol>

        <!--Wrapper for slides -->
        <div class="carousel-inner">
          <% @photos.each do |photo| %>
            <div class="item <%= 'active' if photo.id == @photos[0].id %>">
              <%= image_tag photo.image.url() %>
            </div>
          <% end %>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
        </div>
      <% end %>
    </div>
    <br/>

    <!-- REVIEWS -->
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">Reviews (<%= @guest_reviews.length %>) <span id="average_rating"></span></div>
          <div class="container">
            <div class="panel-body">
              <%= render "reviews/guest_list" %>
            </div>
          </div>
      </div>
    </div>
    
    <!-- GOOGLE MAP -->
    <div class="row">

      <div id="map" style="width: 100%; height: 400px"></div>
          <script src="https://maps.googleapis.com/maps/api/js"></script>
      <script>
       function initialize() {
          var location = {lat: <%= @venue.latitude %>, lng: <%= @venue.longitude %>};
          var map = new google.maps.Map(document.getElementById('map'), {
            center: location,
            zoom: 14
          });

          var marker = new google.maps.Marker({
            position: location,
            map: map
          });

          var infoWindow = new google.maps.InfoWindow({
            content: '<div id="content"><%= image_tag @venue.cover_photo(:medium) %></div>'
          });

          infoWindow.open(map, marker);
        }

        google.maps.event.addDomListener(window, 'load', initialize);
      </script>

    </div>
    <br/>

    <!-- NEARBY SHINDIG EVENT HOSTS -->
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">Nearby</div>
        <% for venue in @venue.nearbys(10) %>
          <div class="col-md-4">
              <div class="panel panel-default">
                <div class="panel-heading preview">
                  <%= image_tag venue.cover_photo(:medium) %>
                </div>
                <div class="panel-body">
                  <%= link_to venue.listing_name, venue %><br/>
                  (<%= venue.distance.round(2) %> mi away)
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- RIGHT PANEL -->
  <div class="col-md-4">
    <!-- RESERVATION FORM -->
    <%= render 'reservations/form' %>
  </div>
</div>

<script>
  $('#average_rating').raty({
    path: '/assets',
    readOnly: true,
    score: <%= @venue.average_rating %>
  });
</script>