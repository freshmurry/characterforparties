<div class="row">
  <div class="col-md-12 banner text-center">
    <h1><span class="text-blue">Book a chracter</span> simple and easy.</h1>
  </div>

  <div class="col-md-12"><h4>Search for a caracter for your party</h4></div>
</div>


  <div class="row">
    <div class="col-md-6">
      <%= form_tag search_path, method: :get do %>

      <%= text_field_tag :search, params[:search], placeholder: "Search for a Chracter", class: "form-control", id: "autolocation" %>
    </div>&nbsp;

    <div class="col-md-2">
      <%= submit_tag "Search", class: "btn btn-form btn-block" %>
    </div>
  </div>

<% end %>

