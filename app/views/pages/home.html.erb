<div class="row">
  <div class="col-md-9 banner">
    <h1><span class="text-blue">Book barbershop appointments</span> simple, easy, and eliminate unecessary waiting.</h1>
  </div>
</div>

<%= form_tag search_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: "Search for a Barber", class: "form-control", id: "autolocation" %>
    </div>
    
    <div class="col-md-2">
      <%= text_field_tag :start_date, params[:start_date], placeholder: "Appointment Date", class: "form-control datepicker" %>
    </div>

    <div class="col-md-2">
      <%= text_field_tag :end_date, params[:end_date], placeholder: "Time", class: "form-control datepicker" %>
    </div>

    <div class="col-md-2">
      <%= submit_tag "Search", class: "btn btn-normal btn-block" %>
    </div>
  </div>

<% end %>

