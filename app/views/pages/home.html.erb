</div>

<%= form_tag search_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: "Search for a Venue Space", class: "form-control", id: "autolocation" %>
    </div>
    
    <div class="col-md-3">
      <%= text_field_tag :start_date, params[:start_date], placeholder: "Event Date", class: "form-control datepicker" %>
    </div>

    <div class="col-md-3">
      <%= submit_tag "Search", class: "btn btn-normal btn-block" %>
    </div>
  </div>

<% end %>

