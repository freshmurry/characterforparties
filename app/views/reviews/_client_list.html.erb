<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Reviews From Clients (<%= @client_reviews.count %>)</h4>
      <span id="average_rating"></span>
    </div>
  
    <div class="panel-body">
      <div class="container">
        <% if @client_reviews.count == 0 %>
          <div class="text-center">
            <h4>There are no reviews.</h4>
          </div>
        <% else %>
        
          <% @client_reviews.order(id: :desc).each do |r| %>
            <hr/>
            <div class="row">
              <div class="col-md-3 text-center">
                <%= image_tag avatar_url(r.client), class: "img-circle avatar-medium" %><br/><br/>
                <strong><%= r.client.fullname %></strong>
              </div>
              <div class="col-md-9">
                <div id="star_<%= r.id %>"></div>
        
                <% if current_user && current_user == r.client %>
                    <span class="pull-right">
                      <%= link_to r, method: :delete, data: {confirm: "Are you sure?"} do %>
                          <i class="fa fa-trash-o fa-lg"></i>
                      <% end %>
                    </span>
                <% end %>
                <div><%= r.created_at.strftime("%v") %></div>
                <div><%= r.comment %></div>
              </div>
            </div>
            
            <script>
              $('#star_<%= r.id %>').raty({
              path: '/assets',
              readOnly: true,
              score: <%= r.star %>
              });
            </script>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
